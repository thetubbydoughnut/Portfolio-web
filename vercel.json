{
  "version": 2,
  "builds": [
    {
      "src": "portfolio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "portfolio/dist",
        "buildCommand": "cd portfolio && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/portfolio/dist/assets/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)\\.(.+)",
      "dest": "/portfolio/dist/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/portfolio/dist/index.html"
    }
  ]
} 