{
  "version": 2,
  "builds": [
    {
      "src": "portfolio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "portfolio/dist",
        "buildCommand": "cd portfolio && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/portfolio/dist/assets/$1",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable",
        "x-vercel-cache": "HIT" 
      }
    },
    {
      "src": "/",
      "dest": "/portfolio/dist/index.html",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/portfolio/dist/index.html",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ]
} 